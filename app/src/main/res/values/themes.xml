<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Zoro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors. -->
        <item name="colorPrimary">@color/something_green</item>
        <item name="colorPrimaryVariant">@color/something_green_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/something_purple</item>
        <item name="colorSecondaryVariant">@color/something_purple_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Bars -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="rippleColor">@color/something_green_ripple</item>
        <item name="itemRippleColor">@color/something_green_ripple</item>
        <item name="tabRippleColor">@color/something_green_ripple</item>

        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/light_foreground</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="fontFamily">@font/work_sans</item>
        <item name="colorAccent">?colorPrimary</item>
    </style>

    <style name="Theme.Zoro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Zoro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Zoro.Light" parent="Theme.Zoro">

        <!-- Primary colors. -->
        <item name="colorPrimary">@color/something_green</item>
        <item name="colorPrimaryVariant">@color/something_green_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/something_purple</item>
        <item name="colorSecondaryVariant">@color/something_purple_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">?colorPrimary</item>

        <!-- Bars -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="rippleColor">@color/something_green_ripple</item>
        <item name="itemRippleColor">@color/something_green_ripple</item>
        <item name="tabRippleColor">@color/something_green_ripple</item>

        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/light_foreground</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

    </style>

    <style name="Theme.Zoro.Splash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/light_foreground</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Zoro</item>

    </style>

</resources>